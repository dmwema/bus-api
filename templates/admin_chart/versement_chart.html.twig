{% extends '@SonataAdmin/standard_layout.html.twig' %}
    
    {% block header %}
      
            {{ encore_entry_link_tags('app') }}
        
    
        
            {{ encore_entry_script_tags('app') }}
       
     

        
    {% endblock %}
   
    {% block sonata_admin_content %}
        <div class="box">
            
                
                    <div class="row" style="padding:20px">
                        <div class="col col-lg-4 ">
                            <form method="GET" action="{{path('app_admin_chart_versement')}}">
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Filter time</label>
                                <select class="form-control" id="exampleFormControlSelect1" name="filter" >
                                    <option value="">-- Select --</option>    
                                    <option value="today">Today</option>
                                    <option value="thismonth">This month</option>
                                    <option value="thisweek">This week</option>
                                </select>
                                
                            </div>
                            
                        </div>
                        <div class="col col-lg-3">
                            <label for="usersFormControlSelect1">By driver</label>
                                <select class="form-control" id="usersFormControlSelect1" name="driver">
                                    <option value="">-- Select --</option>    
                                    {% for item in drivers %}
                                        <option value="{{item.username}}">{{item.fullname}}</option>
                                    {% endfor %}
                                </select>
                        </div>
                        <div class="col col-lg-5 ">
                            
                                <div class="row">
                                    <div class="col col-lg-6">
                                <div class="form-group">
                                    <label for="fromDate">From</label>
                                    <input type="date" class="form-control" id="fromDate" name="fromDate" placeholder="Start Date">
                                </div>
                                </div>
                                <div class="col col-lg-6">
                                <div class="form-group">
                                    <label for="fromDate">To</label>
                                    <input type="date" class="form-control" id="toDate" name="toDate" placeholder="End Date">
                                </div>
                                </div>
                                </div>
                        </div>
                        <div class="form-group" style="padding-left:10px">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                        </div>
                        </form>
                    </div>
            
        </div>
        <div style="margin-bottom:10px">
      
            <div class="box">
                <div class="box-header ">
                    <h3 class="box-title">Versements {{title}}</h3>
                    <!--<div class="pull-right">
                        <a class="btn btn-info" href="#" >Prime 5 </a>&nbsp;
                        <a class="btn btn-light" href="#" >Prime 6 </a>&nbsp;
                    </div>-->
